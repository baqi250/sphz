.container{
	padding: 20px;
}
div#rMenu {position:absolute; visibility:hidden; top:0; background-color: #9cd79e;text-align: center;}
div#rMenu ul li{
	cursor: pointer;
	list-style: none outside none;
	background-color: #26bdc9;
	font-size:12px;
}
div#rMenu ul{
	padding:2px;
	margin:2px;
}
.main-container{
	height:100%;
	width:100%;
}
html{
	height:100%;
	margin:0;
}
body{
    height:100%;
    margin:0; 
    font-family:Microsoft YaHei;
}
#map{
    width:   100%;
    height:  100%;
    margin:  0;
    padding: 0;
}

#switch{
	margin-top:10px;
	margin-left:10px; 
	position:absolute;  
	z-index:3; 
	width:40px;
	height:40px; 
	background:url('../resources/images/open.png') no-repeat;
}
/********************************* ��ͼ�Ҳ๤����*************************************** */
.toolsContainer{
	font-family:Microsoft YaHei;
	box-shadow:1px 2px 1px #b2b2b2;
	border:1px solid #EFF0EF;
	height:34px;
	border-radius:2px;
	box-sizing:border-box;
	background:#ffffff;
	position:relative;
}
.toolsContainer div{
	height:34px;
	float:left;
	padding-right:13px;
	cursor:pointer;
}
.toolsContainer div:hover,.toolsContainer div.active{
	color:green;
}
.ztreeActive{
	background-color: green;
}
.toolsContainer span{
	height:34px;
	width:34px;
	margin-right:2px;
	float:left;
	text-align:center;
	line-height:34px;
}
.toolsContainer i{
	line-height:34px;
	font-size:14px;
	font-style:normal;
	height:34px;
	display:inline-block;
	float:left;
}
.line_b{
	float:left;
	height:21px;
	display:inline-block;
	border-right:1px solid #CDCCCC;
	top:7px;
	position:relative;
}
/************************************ͼ��******************************************** */
#legendDiv{
	font-family:Microsoft YaHei;
	font-size: 16px;
	position:absolute!important; 
	z-index:2;
	bottom:10px; 
	right:10px;
	width:400px;
	height:50%;
	background-color: #ffffff;
	box-shadow:1px 2px 1px #b2b2b2;
	border:1px solid #EFF0EF;
	border-radius:2px;
	display:none;
}
#legend{	 
	width:100%;
	height:90%;
	overflow-y:auto;
	padding: 10px;
}
#legend-title{
	width:100%;
	height:30px;
	background-color: #96A5A7;
	padding: 5px;
}
/* ��дesriͼ����ʽ */
.esriLegendLayer>tbody>tr{
	float:left;
	width:50%;
}
td>table{
	width:100%;
}
.esriLegendService {
    padding-bottom: 10px !important;
}
/************************************ͼ���ѯ******************************************** */
#queryContainer{
	height:650px!important;
	font-family:Microsoft YaHei;	
}
#queryContainer select{
	width:200px;	
}
#result_tree{
   overflow:auto;
   height: 84.1%;
}
label{
	margin-top:10px;
}
.line_h{
	float: left;
    width: 93%;
    display: inline-block;
    border-bottom: 1px solid #96A5A7;
    top: 261px;
    height: 4px;
    position: absolute;
    cursor: s-resize;
    z-index:1;
}
.queryContent{
	height:220px;
	width:100%;
    position: relative;
    overflow: hidden;
}
#attributes{
	height:430px;
}
#attriTable,#valuesTable{
	height:91.9%;
	overflow:auto;
}
#attriTable tr,#attriTable td,#attriTable th,#valuesTable tr,#valuesTable td,#valuesTable th{
	border:1px solid #CDCCCC;
	height:25px;
}
#attriTable table,#valuesTable table{
	width:100%;
	table-layout:fixed;
}
#attriTable .field,#valuesTable .field{
	width:40%;
}
#attriTable .value,#valuesTable .value{
	width:60%;
}
#attriTable th,#valuesTable th{
	background-color: #CDCCCC;
}
#infoDiv tr,#infoDiv td,#infoDiv th{
	border:1px solid #CDCCCC;
	height:25px;
}
#infoDiv table{
	width:100%;
	table-layout:fixed;
}
#infoDiv .field{
	width:20%;
	text-align: center;
}
#infoDiv .value{
	width:80%;
	text-align: left;
}
#infoDiv th{
	background-color: #CDCCCC;
}
#search{
	display: block;
	position: absolute;
	z-index: 2;
	bottom: 120px;
	right: 0px;
}
#qiujiao{
	display: block;
	position: absolute;
	z-index: 2;
	bottom: 50px;
	left: 0px;
}