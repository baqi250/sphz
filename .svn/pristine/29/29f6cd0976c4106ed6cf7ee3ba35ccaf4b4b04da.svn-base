@charset "utf-8";
/*公共样式*/
* { margin:0; padding:0 }
a { text-decoration:none; border:none; outline:none; }
ul { list-style:none }
.clear { clear:both }/*清除浮动*/
/*单选按钮样式，可以定义想要的样式*/
.radio_box ul li { background:url(../../img/radio_01.png) 5px center no-repeat; /*未选中项的样式*/ padding-left:34px; margin:0 5px; height:34px; line-height:34px; font-size:18px; color:#575757; cursor:default }
.radio_box ul li.selected { background:url(../../img//radio_02.png) 5px center no-repeat }
.radio_box ul li:hover { background-color:#fee7e6; color:#000 }
