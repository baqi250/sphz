/* 项目名称 */

.content-header {
    border-bottom: 1px solid #ddd;
}

.content-header>h1 {
    margin: 0;
    font-size: 18px !important;
    line-height: 28px;
}

.content-header>h1>i {
    margin-right: 4px;
}

.content-info {
    padding: 0 !important;
}


/* tab */

.nav-tabs-custom {
    box-shadow: none !important;
}


/* box */

.box-header .box-title i {
    margin-right: 4px;
}

.btn-box-tool-w {
    padding: 5px;
    font-size: 12px;
    background: transparent;
    color: #fff;
}

.open .btn-box-tool-w,
.btn-box-tool-w:hover,
.btn-box-tool-w:focus {
    color: #fff;
}

.btn-box-tool-w.btn:active {
    box-shadow: none;
}

.box-tool {
    width: 100%;
    padding: 6px 0;
    text-align: right;
}

.box-body hr {
    margin: 0 !important;
}


/* box-nav */

.nav-stacked>li>a {
    padding: 10px 0;
}

.nav-stacked>li>a:hover {
	background-color:#fff;
}

.nav-stacked>li>a>span {
    width: 70px;
    position: absolute;
    left: 10px;
    top: 10px;
    color: #0073b7;
}

.nav-stacked>li>a p {
    width: 100%;
    margin: 0 !important;
    padding-left: 76px;
}


/* 分期 */

#nav-stages>li>a>span {
    top: 14px;
}

#nav-stages>li>a p {
    line-height: 28px;
}


/* tree */

.panel-group {
    margin: 0 !important;
}

.panel-body {
    padding: 0 !important;
}

.panel-title {
    font-size: 14px;
}

.panel-title i {
    margin-right: 4px;
}

.custom-panel {
    border: none;
    box-shadow: none;
    border-radius: 2px !important;
    border: 1px solid #f2f2f2;
    border-left: 2px solid #f4f4f4;
}

.custom-panel a {
    text-decoration: none;
    color: #444;
}

.custom-panel a:hover {
    color: #000;
}

.border-blue {
    border-left-color: #0073b7 !important;
}

.custom-panel.border-blue>a:hover {
    color: #0073b7 !important;
}

.border-yellow {
    border-left-color: #f39c12 !important;
}

.custom-panel.border-yellow>a:hover {
    color: #f39c12 !important;
}

.border-green {
    border-left-color: #00a65a !important;
}

.custom-panel.border-green>a:hover {
    color: #00a65a !important;
}

.border-red {
    border-left-color: #dd4b39 !important;
}

.custom-panel.border-red>a:hover {
    color: #dd4b39 !important;
}

.custom-panel .panel-heading {
    position: relative;
}

.custom-panel .panel-heading .panel-title {
    max-width: 96%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.custom-panel .panel-heading:after {
    position: absolute;
    content: '';
    width: 7px;
    height: 7px;
    border-width: 2px 0 0 2px;
    border-style: solid;
    border-color: #444;
    right: 1em;
    -webkit-transform: rotate(135deg) translate(0, -50%);
    -ms-transform: rotate(135deg) translate(0, -50%);
    -o-transform: rotate(135deg) translate(0, -50%);
    transform: rotate(135deg) translate(0, -50%);
    -webkit-transform-origin: top;
    -ms-transform-origin: top;
    -o-transform-origin: top;
    transform-origin: top;
    top: 50%;
    -webkit-transition: all 0.3s ease-out;
    -o-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
}

.custom-panel a[aria-expanded=true] .panel-heading:after {
    -webkit-transform: rotate(-135deg) translate(0, -50%);
    -ms-transform: rotate(-135deg) translate(0, -50%);
    -o-transform: rotate(-135deg) translate(0, -50%);
    top: 45%;
    width: 7px;
    transform: rotate(-135deg) translate(0, -50%);
}

.custom-panel.border-blue>a[aria-expanded=true] {
    color: #0073b7 !important;
}

.custom-panel.border-yellow>a[aria-expanded=true] {
    color: #f39c12 !important;
}

.custom-panel.border-green>a[aria-expanded=true] {
    color: #00a65a !important;
}

.custom-panel.border-red>a[aria-expanded=true] {
    color: #dd4b39 !important;
}

.custom-table {
    position: relative;
    list-style: none;
    color: #666666;
    font-size: 14px;
    margin: 0;
    padding: 0;
}

.custom-table li {
    position: relative;
}

.custom-table li>a {
    position: relative;
    margin: 0;
    padding: 10px 20px 10px 30px;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.custom-table li.title>a {
    padding: 10px 20px 10px 16px !important;
    border-top: 1px solid #eee;
}

.custom-table li.title>a i {
    font-size: 6px;
    -webkit-transform-origin-x: 0;
    -webkit-transform: scale(0.80);
}

.custom-table li>a:hover,
.custom-table li>a:focus,
.custom-table li>a.focus {
    background-color: #f7f7f7;
    cursor: pointer;
}

.custom-table li.title>a:hover,
.custom-table li.title>a:focus,
.custom-table li.title>a.focus {
    background-color: #fff;
    cursor: default;
}

.custom-table li label {
    cursor: pointer;
}

.custom-table li.title label {
    cursor: default;
}

.custom-table li .custom-time {
    position: absolute;
    right: 16px;
    top: 10px;
}

.custom-table li .custom-time span {
    font-size: 13px;
    color: #aaa;
}

.custom-table li .custom-time span i {
    margin-right: 4px;
}

.custom-table li .custom-time a {
   /*  margin-left: 5px;
    font-size: 13px;
    color: #3c8dbc; */
    margin-left: 10px;
    font-size:20px;
    color:#3c8dbc;
    text-decoration: underline;
}

.custom-table li .custom-time a:hover {
    color: #0073b7;
}


/* timeline */

#timeline {
    padding: 10px 0;
}

.timeline .time span {
    padding-right: 5px;
}

.timeline .time a {
    /* padding-right: 5px; */
    padding-right: 10px;
    font-size: 20px;
    text-decoration: underline;
}

.timeline>.time-label>span>i {
    margin: 0 4px;
}
.timeline li{
	cursor: pointer;
}