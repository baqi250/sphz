/* 筛选 */

@media (max-width: 770px) {
    .box-select-item {
        margin: 10px 0;
    }
}

.box-mutiselect {
    display: inline-block;
}

@media (min-width: 1380px) {
    .box-mutiselect {
        width: 74%;
    }
}

@media (max-width: 1380px) {
    .box-mutiselect {
        width: 90%;
    }
}


